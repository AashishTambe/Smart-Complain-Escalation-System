<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Complaint System</display-name>

    <!-- servlets -->
    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>com.complaintsystem.controller.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComplaintServlet</servlet-name>
        <servlet-class>com.complaintsystem.controller.ComplaintServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.complaintsystem.controller.AdminServlet</servlet-class>
    </servlet>

    <!-- servlet mappings -->
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/register</url-pattern>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ComplaintServlet</servlet-name>
        <url-pattern>/registerComplaint</url-pattern>
        <url-pattern>/myComplaints</url-pattern>
        <url-pattern>/viewComplaint</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminDashboard</url-pattern>
        <url-pattern>/updateStatus</url-pattern>
    </servlet-mapping>

    <!-- listeners -->
    <listener>
        <listener-class>com.complaintsystem.listener.EscalationJobListener</listener-class>
    </listener>

    <!-- welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
