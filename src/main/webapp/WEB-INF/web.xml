<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>ComplaintSystem</display-name>

    <!-- Listener that schedules the escalation job -->
    <listener>
        <listener-class>com.complaintsystem.listener.EscalationScheduler</listener-class>
    </listener>

    <!-- Complaint registration servlet -->
    <servlet>
        <servlet-name>ComplaintRegistrationServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.ComplaintRegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComplaintRegistrationServlet</servlet-name>
        <url-pattern>/registerComplaint</url-pattern>
    </servlet-mapping>

    <!-- Login servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- My complaints servlet -->
    <servlet>
        <servlet-name>MyComplaintsServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.MyComplaintsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyComplaintsServlet</servlet-name>
        <url-pattern>/myComplaints</url-pattern>
    </servlet-mapping>

    <!-- Admin dashboard servlet -->
    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/adminDashboard</url-pattern>
    </servlet-mapping>

    <!-- Staff dashboard servlet -->
    <servlet>
        <servlet-name>StaffDashboardServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.StaffDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaffDashboardServlet</servlet-name>
        <url-pattern>/staffDashboard</url-pattern>
    </servlet-mapping>

    <!-- Status update servlet -->
    <servlet>
        <servlet-name>StatusUpdateServlet</servlet-name>
        <servlet-class>com.complaintsystem.servlet.StatusUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StatusUpdateServlet</servlet-name>
        <url-pattern>/updateStatus</url-pattern>
    </servlet-mapping>

    <!-- Default welcome page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Escalation servlet -->
    <servlet>
        <servlet-name>EscalationServlet</servlet-name>
        <servlet-class>com.complaintsystem.controller.EscalationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EscalationServlet</servlet-name>
        <url-pattern>/escalationPanel</url-pattern>
    </servlet-mapping>

    <!-- Generic error page -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error.jsp</location>
    </error-page>

</web-app>

